<div class="container mt-5 text-center">
    <h1>Rails Calendar</h1>
    <%= link_to 'Novo Evento', new_event_path, data: { turbo_frame: 'new-event' } %>

    <%= month_calendar(events: @events) do |date, events| %>
        <div class="day">
            <%= date.day %>
        </div>
        <% events.each do |event| %>
          <span class="tag is-info is-rounded">
              <%= link_to event.title, event_path(event), data: { turbo_frame: 'show-event' }, class: 'has-text-white' %>
          </span>
        <% end %>
    <% end %>

    <%= turbo_frame_tag 'new-event' %>
    <%= turbo_frame_tag 'show-event' %>
</div>
