<div class="card">
    <%= form_with(model: @event) do |f| %>
        <header class="card-header">
            <p class="card-header-title">Novo Evento</p>
        </header>

        <div class="card-content">
            <div class="content">
                <div class="field">
                    <%= f.label :title, class: 'label' %>
                    <%= f.text_field :title, class: 'input' %>
                </div>

                <div class="field">
                    <%= f.label :description, class: 'label' %>
                    <%= f.text_area :description, class: 'textarea' %>
                </div>

                <div class="field">
                    <%= f.label :start_time, class: 'label' %>
                    <%= f.datetime_local_field :start_time, class: 'input' %>
                </div>

                <div class="field">
                    <%= f.label :end_time, class: 'label' %>
                    <%= f.datetime_local_field :end_time, class: 'input' %>
                </div>
            </div>

            <div class="is-flex is-justify-content-flex-end">
                <%= link_to 'cancelar', root_path, class: 'button is-danger mx-1' %>
                <%= f.submit 'Adicionar', class: 'button is-primary mx-1' %>
            </div>
        </div>

    <% end %>
</div>
